<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnListItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/round3"
    android:gravity="center">

    <TextView
        android:paddingVertical="@dimen/_10sdp"
        android:gravity="center"
        android:id="@+id/btnTatCa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Văn bản đã nhập"
        android:textColor="@color/colorMain" />

    <View
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey" />

    <TextView
        android:paddingVertical="@dimen/_10sdp"
        android:gravity="center"
        android:id="@+id/btnVanbanMoiNhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đã gửi mail"
        android:textColor="@color/colorMain" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:background="@color/grey" />

    <TextView
        android:paddingVertical="@dimen/_10sdp"
        android:gravity="center"
        android:id="@+id/btnDaGiaiQuyet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chưa gửi mail"
        android:textColor="@color/colorMain" />
</LinearLayout>