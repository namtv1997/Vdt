<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginBottom="15dp"
    android:background="@drawable/round2"
    android:elevation="3dp">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_gravity="center"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/lnSTT"
                android:padding="3dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="4"
                android:background="@drawable/duyet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="STT"
                    android:textColor="@color/colorWhite"
                    android:textSize="14dp" />

                <TextView
                    android:paddingHorizontal="2dp"
                    android:id="@+id/tvSTT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>

            <View
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/colorMain" />

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView6s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="HẠN VĂN BẢN"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tvSKH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/colorMain" />
            </LinearLayout>

            <!--            <LinearLayout-->
            <!--                android:layout_gravity="center"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_weight="2.7"-->
            <!--                android:orientation="vertical">-->

            <!--                <TextView-->
            <!--                    android:id="@+id/texgtView6s"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:layout_gravity="center"-->
            <!--                    android:gravity="center"-->
            <!--                    android:text="SỐ ĐẾN"-->
            <!--                    android:textColor="@color/colorBlack"-->
            <!--                    android:textSize="14dp" />-->

            <!--                <TextView-->
            <!--                    android:id="@+id/tvsodendo"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:layout_centerHorizontal="true"-->
            <!--                    android:gravity="center"-->
            <!--                    android:textColor="@color/colorRed" />-->

            <!--            </LinearLayout>-->

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:layout_marginRight="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textVifew6s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="NGƯỜI NHẬP"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tvnoigui"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/colorMain" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="7dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorMain" />

        <TextView
            android:visibility="gone"
            android:textStyle="italic"
            android:id="@+id/tvLoaiVanBan"
            android:textColor="@color/colorBlack"
            android:layout_marginHorizontal="7dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tvMoTa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:layout_marginHorizontal="7dp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tvSoTrang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorBlack"
            android:layout_marginHorizontal="7dp" />

        <TextView
            android:visibility="gone"
            android:textStyle="italic"
            android:id="@+id/tvNguoiNhap"
            android:textColor="@color/colorBlack"
            android:layout_marginHorizontal="7dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tvTieuDeNoiDung"
            android:textStyle="italic"
            android:textColor="@color/colorBlack"
            android:layout_marginHorizontal="7dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nội dung*:" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tvNoiDung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold|italic"
            android:layout_marginHorizontal="7dp" />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:visibility="gone"
                android:layout_weight="1"
                android:id="@+id/tvNgayNhap"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic" />

            <TextView
                android:gravity="right"
                android:visibility="gone"
                android:layout_weight="1"
                android:id="@+id/tvHanXuLy"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">

            <Button
                android:id="@+id/btnXemFile"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_margin="1dp"
                android:background="@drawable/et"
                android:drawableLeft="@drawable/ic_xemfile"
                android:paddingHorizontal="10dp"
                android:text="Xem file"
                android:textAllCaps="false"
                android:textColor="@color/colorMain"
                android:textSize="13dp" />

            <Button
                android:id="@+id/btnXuLy"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="1dp"
                android:background="@drawable/et"
                android:drawableLeft="@drawable/ic_xuly"
                android:paddingHorizontal="10dp"
                android:text="Xử lý"
                android:textAllCaps="false"
                android:textColor="@color/colorMain"
                android:textSize="13dp" />

            <Button
                android:id="@+id/btnXemChiTiet"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_margin="1dp"
                android:background="@drawable/et"
                android:drawableLeft="@drawable/ic_chitiet"
                android:paddingHorizontal="10dp"
                android:text="Chi tiết"
                android:textAllCaps="false"
                android:textColor="@color/colorMain"
                android:textSize="13dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>