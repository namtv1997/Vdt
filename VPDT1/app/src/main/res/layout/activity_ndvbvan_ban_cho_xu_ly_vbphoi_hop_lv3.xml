                android:id="@+id/edtChiDao1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/et"
                android:gravity="top"
                android:hint="Nội dung chuyển phó phòng"
                android:padding="10dp"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/edtChiDao2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/et"
                android:gravity="top"
                android:hint="Nội dung chuyển phó phòng phối hợp"
                android:padding="10dp"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/edtChiDao3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/et"
                android:gravity="top"
                android:hint="Nội dung chuyển chuyên viên chủ trì"
                android:padding="10dp"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/edtChiDao4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/et"
                android:gravity="top"
                android:hint="Nội dung chuyển chuyên viên phối hợp"
                android:padding="10dp"
                android:textSize="13dp" />

            <Button
                android:id="@+id/btnDuyet"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginVertical="30dp"
                android:background="@drawable/duyet"
                android:paddingHorizontal="50dp"
                android:text="Duyệt"
                android:textColor="@color/colorWhite" />
        </LinearLayout>
    </ScrollView>
