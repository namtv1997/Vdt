<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="Chọn phòng ban phối hợp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivCancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/_15sdp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:src="@drawable/ic_cancel" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@color/greyTransparent" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcTenPhongPhoiHop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--    <View-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="@dimen/_1sdp"-->
    <!--        android:background="@color/greyTransparent" />-->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcTenChuyenVien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/greyTransparent" />

    <Button
        android:id="@+id/btnGhiLai"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:paddingHorizontal="@dimen/_30sdp"
        android:layout_gravity="end"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/bg_btn_chon_phong_ban"
        android:text="Ghi lại"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite" />

</LinearLayout>