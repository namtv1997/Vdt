<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSTT"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/colorBlack" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlack" />

            <TextView
                android:id="@+id/tvRCVSoDen"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/colorBlack" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlack" />

            <TextView
                android:id="@+id/tvRCVSoKyHieu"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/colorBlack" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlack" />

            <TextView
                android:id="@+id/tvRCVNgayBanHanh"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/colorBlack" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlack" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvRCVNoiDung"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/tvXemFile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:text="Xem file"
                    android:textColor="@color/colorCyan" />
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlack" />

            <TextView
                android:id="@+id/tvRCVNgayGiao"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/colorBlack" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlack" />

            <TextView
                android:id="@+id/tvRCVPhongBanDonViChuTri"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/colorBlack" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlack" />

            <TextView
                android:id="@+id/tvRCVPhongBanDonViPhoiHop"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/colorBlack" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlack" />

            <TextView
                android:id="@+id/tvRCVThoiHanHoanThanh"
                android:layout_width="@dimen/_170sdp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/colorBlack" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlack" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvRCVTinhHinhTrienKhai"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/tvXemFile1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="5dp"
                    android:text="Xem file"
                    android:textColor="@color/colorCyan"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlack" />

            <TextView
                android:id="@+id/tvRCVTongSo"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/colorBlack" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlack" />

            <TextView
                android:id="@+id/tvRCVDangTrienKhaiChuaDenHan"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/colorBlack" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlack" />

            <TextView
                android:id="@+id/tvRCVDangTrienKhaiQuaHan"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/colorBlack" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlack" />

            <TextView
                android:id="@+id/tvRCVHoanThanhTrongHan"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/colorBlack" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlack" />

            <TextView
                android:id="@+id/tvRCVHoanThanhQuaHan"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/colorBlack" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlack" />

            <TextView
                android:id="@+id/tvRCVKhoKhanVuongMac"
                android:layout_width="@dimen/_170sdp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/colorBlack" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlack" />

            <TextView
                android:id="@+id/tvRCVGhiChu"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/colorBlack" />
        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorBlack" />
</LinearLayout>
