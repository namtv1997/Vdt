<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/round2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:text="NỘI DUNG"
        android:textColor="@color/colorMain"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tvNoiDung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:textColor="@color/colorBlack" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="8dp"
        android:text="PHỤ LỤC   "
        android:textColor="@color/colorMain"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tvPhuLuc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:textColor="@color/colorBlack" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="8dp"
        android:text="PHÒNG CHỦ TRÌ"
        android:textColor="@color/colorMain"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tvPhongChuTri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:textColor="@color/colorBlack" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="8dp"
        android:text="PHÒNG PHỐI HỢP"
        android:textColor="@color/colorMain"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tvPhongPhoiHop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:textColor="@color/colorBlack" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="8dp"
        android:text="XEM FILE"
        android:textColor="@color/colorMain"
        android:textSize="16dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcvXemFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp">

    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/btnDong"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginVertical="@dimen/_20sdp"
        android:layout_marginRight="15dp"
        android:background="@drawable/btndong"
        android:paddingHorizontal="@dimen/_25sdp"
        android:text="Đóng"
        android:textColor="@color/colorRed" />
</LinearLayout>