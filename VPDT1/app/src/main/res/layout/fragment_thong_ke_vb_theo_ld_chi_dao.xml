<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="1dp">

                <android.support.design.widget.AppBarLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/group1503x">

                    <RelativeLayout
                        android:id="@+id/rlThongke"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/btnBack"
                            android:layout_width="48dp"
                            android:layout_height="46dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="35dp"
                            android:background="@drawable/back" />

                        <Button
                            android:id="@+id/btnHome"
                            android:layout_width="48dp"
                            android:layout_height="46dp"
                            android:layout_marginLeft="80dp"
                            android:layout_marginTop="35dp"
                            android:background="@drawable/group863x" />

                        <Button
                            android:id="@+id/btnNamLamViec"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="38dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/chonnam"
                            android:paddingLeft="20dp"
                            android:paddingRight="50dp"
                            android:text="Năm làm việc:  2019"
                            android:textColor="@color/colorWhite"
                            android:textSize="13dp" />

                        <Button
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="48dp"
                            android:layout_marginRight="33dp"
                            android:background="@drawable/lichwhite3x" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                android:layout_marginTop="105dp"
                            android:text="THỐNG KÊ VĂN BẢN THEO LÃNH ĐẠO CHỈ ĐẠO"
                            android:textColor="#FFFFFF" />

                    </RelativeLayout>
                </android.support.design.widget.AppBarLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/TenVB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round4"
                        android:hint="--Chọn phó giám đốc--"
                        android:paddingVertical="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="30dp"
                        android:textColor="@color/colorBlack" />

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/path44013x" />
                </RelativeLayout>


                <Button
                    android:id="@+id/btnSearch"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="2"
                    android:background="@drawable/duyet"
                    android:text="Tìm kiếm"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/lnPhoGiamDoc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="wrap_content"
                                android:background="@color/colorMain"
                                android:gravity="center"
                                android:padding="@dimen/_10sdp"
                                android:text="STT"
                                android:textColor="@color/colorWhite" />

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:background="@color/colorBlack" />

                            <TextView
                                android:layout_width="@dimen/_150sdp"
                                android:layout_height="match_parent"
                                android:background="@color/colorMain"
                                android:gravity="center"
                                android:padding="@dimen/_10sdp"
                                android:text="PHÓ GIÁM ĐỐC"
                                android:textColor="@color/colorWhite" />

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:background="@color/colorBlack" />

                            <TextView
                                android:layout_width="@dimen/_250sdp"
                                android:layout_height="match_parent"
                                android:background="@color/colorMain"
                                android:gravity="center"
                                android:padding="@dimen/_10sdp"
                                android:text="SỐ LƯỢNG VĂN BẢN ĐÃ CHỈ ĐẠO TRỰC TIẾP"
                                android:textColor="@color/colorWhite" />

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:background="@color/colorBlack" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/colorBlack" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rvGiamDoc"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="wrap_content"
                            android:background="@color/colorMain"
                            android:gravity="center"
                            android:padding="@dimen/_10sdp"
                            android:text="STT"
                            android:textColor="@color/colorWhite" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorBlack" />

                        <TextView
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="match_parent"
                            android:background="@color/colorMain"
                            android:gravity="center"
                            android:padding="@dimen/_10sdp"
                            android:text="PHÒNG BAN"
                            android:textColor="@color/colorWhite" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorBlack" />

                        <TextView
                            android:layout_width="@dimen/_250sdp"
                            android:layout_height="match_parent"
                            android:background="@color/colorMain"
                            android:gravity="center"
                            android:padding="@dimen/_10sdp"
                            android:text="SỐ LƯỢNG VĂN BẢN ĐÃ CHỈ ĐẠO TRỰC TIẾP"
                            android:textColor="@color/colorWhite" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorBlack" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorBlack" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvPhongBan"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_200sdp"
                        android:layout_marginBottom="@dimen/_10sdp" />

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>