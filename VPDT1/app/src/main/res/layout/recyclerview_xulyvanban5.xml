<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginBottom="15dp"
    android:background="@drawable/round2"
    android:elevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:id="@+id/lnSTT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_weight="2.8"
                android:background="@drawable/duyet"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="3dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="STT"
                    android:textColor="@color/colorWhite"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tvSTT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingHorizontal="2dp"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                android:background="@color/colorMain" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2.7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView6s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="SKH"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tvSKH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/colorMain" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2.7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/texgtView6s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="SỐ ĐẾN"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tvsodendo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textColor="@color/colorRed" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:layout_weight="1.8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textVifew6s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="NƠI GỬI"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tvnoigui"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/colorMain" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginHorizontal="7dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorMain" />

        <TextView
            android:id="@+id/tvLoaiVanBan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="7dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorBlack"
            android:textStyle="italic"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvMoTa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="7dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView

            android:id="@+id/tvSoTrang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="7dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorBlack"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvNguoiNhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="7dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorBlack"
            android:textStyle="italic"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvTieuDeNoiDung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="7dp"
            android:layout_marginTop="5dp"
            android:text="Nội dung*:"
            android:textColor="@color/colorBlack"
            android:textStyle="italic"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvNoiDung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="7dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold|italic"
            android:visibility="gone" />

        <org.sufficientlysecure.htmltextview.HtmlTextView
            android:id="@+id/tvHtmlNoiDung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="7dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold|italic"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="7dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvNgayNhap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textStyle="italic"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right">

                <TextView
                    android:id="@+id/tvHanXuLy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textStyle="italic"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnXemFile"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_margin="1dp"
                android:background="@drawable/et"
                android:drawableLeft="@drawable/ic_xemfile"
                android:paddingHorizontal="10dp"
                android:text="Xem file"
                android:textAllCaps="false"
                android:textColor="@color/colorMain"
                android:textSize="13dp" />

            <Button
                android:id="@+id/btnXuLy"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="1dp"
                android:background="@drawable/et"
                android:drawableLeft="@drawable/ic_xuly"
                android:paddingHorizontal="10dp"
                android:text="Xử lý"
                android:textAllCaps="false"
                android:textColor="@color/colorMain"
                android:textSize="13dp" />

            <Button
                android:id="@+id/btnXemChiTiet"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_margin="1dp"
                android:background="@drawable/et"
                android:drawableLeft="@drawable/ic_chitiet"
                android:paddingHorizontal="10dp"
                android:text="Chi tiết"
                android:textAllCaps="false"
                android:textColor="@color/colorMain"
                android:textSize="13dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>